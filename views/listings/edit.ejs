<% layout('/layouts/boilerplate') %>
<body>
    

<br><br>
<div class="row offset-2">
    
    <h3>Edit listing</h3>
    <form action="/listings/<%=foundListing._id%>?_method=PUT" method="post" novalidate class="needs-validation">
        <div class="mb-3 col-8">
            <label for="title" class="form-label" >Title</label>
            <input type="text" name="listing[title]" value = "<%=foundListing.title%>" class="form-control" required >
            <div class="valid-feedback">Title looks good!</div>

        </div>
        
        <div class="mb-3 col-8">
            <label for="description" class="form-label" >Description</label>
        <textarea name="listing[description]" class="form-control" required></textarea>
        <div class="invalid-feedback">Please enter a short Description.</div>

        </div>
        <div class="mb-3 col-8">
            <label for="image" class="form-label" >Image</label>
        <input type="text" name="listing[image]" value = "<%=foundListing.image%>" class="form-control">
        <div class="invalid-feedback">Please enter a valid image link</div>

        </div>

        <div class="mb-3 col-8">
            <label for="price" class="form-label" >Price</label>
            <input type="number" name="listing[price]" value = "<%=foundListing.price%>" class="form-control" required >
            <div class="invalid-feedback">Price should be valid</div>

        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="location" class="form-label" >Location</label>
        <input type="text" name="listing[location]" value = "<%=foundListing.location%>" class="form-control" required>
        <div class="invalid-feedback">Please enter a valid location</div>

        </div>
        <div class="mb-3 col-md-4">
            <label for="Country" class="form-label" >Country</label>
        <input type="text" name="listing[country]" value = "<%=foundListing.country%>" class="form-control" required >
        <div class="invalid-feedback">Please enter a valid country name</div>

    </div>
</div>
        <button class="btn btn-dark edit-btn">EDIT</button>
        <br><br>
    </form>

</body>

