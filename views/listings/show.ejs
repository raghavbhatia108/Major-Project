<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3><b><%= foundListing.title %></b></h3>
    </div>
    <div class="listing-card col-6 offset-3 show-card">
        <img src="<%= foundListing.image %>" class="card-img-top show-img" alt="...">
        <div class="card-body">
            <p class="card-text">
                <br>
                <i><%= foundListing.owner.username %></i>
                <br>
                <%= foundListing.description %>
                <br>
                â‚¹ <%= foundListing.price %>
                <br>
                <%= foundListing.location %>
                <br>
                <%= foundListing.country %>
            </p>
        </div>
    </div>
</div>
<div class="btns">
    <a href="/listings/<%= foundListing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    <form action="/listings/<%= foundListing._id %>?_method=DELETE" method="post">
        <button class="btn btn-dark offset-2">Delete</button>
    </form>
</div>
<hr>
<div class="col-8 offset-3">
    <h4>Leave a Review</h4>
    <form class="mb-3 needs-validation" action="/listings/<%= foundListing.id %>/reviews" method="POST" novalidate>
        <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div>
        <div class="mb-3 mt-3">
            <label for="comment">Comments</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">Please add some comments for review</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr>
    <h3><b>All Reviews</b></h3>
    <div class="row">
        <% for (review of foundListing.reviews) { %>
            <div class="card col-5 mb-3 ms-2">
                <div class="card-body">
                    <h5 class="card-title">John Doe</h5>
                    <p class="card-text"><%= review.comment %></p>
                    <p class="card-text"><%= review.rating %></p>
                </div>
                <form action="/listings/<%= foundListing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3" method="POST">
                    <button>Delete</button>
                </form>
            </div>
        <% } %>
    </div>
</div>
<br><br>
<script src="/js/script.js"></script>
</body>
